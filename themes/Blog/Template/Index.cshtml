<ul>
    @foreach(var post in Documents[Blog.BlogPosts].Take(3)){

    <li>
        <a href="@Context.GetLink(post)">
            <h2>@post.WithoutSettings.String(BlogKeys.Title)</h2>
            @post.String(BlogKeys.Excerpt)
        </a>
    </li>
    
    }
</ul>

<a href="@Context.GetLink(Context.String(BlogKeys.PostsPath))">More Posts</a>